"jsdoc{
    let g:jsdoc_default_mapping=0
    let g:jsdoc_additional_descriptions=0
    nnoremap <F6> :JsDoc<cr>
"}

"ag.vim{
    nnoremap <F3> :Ag<space>
    let g:aghighlight=1
    let g:agprg="ag --colum --smart-case"
"}

